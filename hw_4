#include <stdio.h>

int factorial(int num);

int main(void) {
	int num = 0;
	printf("정수를 입력하세요: ");
	scanf_s("%d", &num);
	printf("\n");
	printf("\n%d의 팩토리얼의 결과 값은 %d\n",num, factorial(num));



}

int factorial(int num) {
	int result = 0;

	printf("fact(%d)함수 호출!\n", num);

	if (num == 1) {
		printf("fact(%d)값 %d 반환\n", num, 1);
		return 1;
	}
	result = num * factorial(num - 1);
	printf("fact(%d)값 %d 반환\n",num,result);
		


	return result;
	

}
